# Ignore system-specific files
.DS_Store
Thumbs.db

# Ignore Unity auto-generated folders
[Ll]ibrary/
Logs/
Temp/
obj/
UserSettings/

/Towerfall/[Ll]ibrary/
/Towerfall/Logs/
/Towerfall/Temp/
/Towerfall/obj/
/Towerfall/UserSettings/

# Ignore Build folders (generated game builds)
Build/
Builds/

# Ignore Unity Package Manager downloaded packages
Packages/com.unity.*
Packages/packages-lock.json

# Keep only essential package configurations (manifest.json needed for Unity to re-download packages)
!Packages/manifest.json

# Ignore Visual Studio/JetBrains IDE files
.vscode/
*.sln
*.csproj
*.unityproj
*.pidb
*.suo
*.user
*.booproj
*.svd

# Ignore Lightmap, GI Cache, and Shader Cache (regenerates on build)
Library/ShaderCache/
Library/GICache/
Library/Artifacts/

/Towerfall/Library/ShaderCache/
/Towerfall/Library/GICache/
/Towerfall/Library/Artifacts/
# Ignore local cache files
*.tmp
*.bak
*.swp
*.lock
*.log
*.~*
